<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   minWidth="955" minHeight="600" applicationComplete="main();">
	<fx:Script>
		<![CDATA[
			import com.vmc.debug.DebugEvent;
			import com.vmc.debug.Logger;
			import com.vmc.player.rtmfp.RtmfpPlayer;
			import com.vmc.player.rtmfp.RtmpfpVideoDisplay;
			import com.vmc.ui.VideoAreaButton;
			import mx.controls.Alert;
			import mx.core.UIComponent;
			
			
			var player:RtmfpPlayer = new RtmfpPlayer(480,320);
			
			[Bindable]
			[Embed('../../../../../../assets/images/pause.png')] 
			private var LocatePoint:Class;  
			
			internal function main():void{
				var ui:UIComponent = new UIComponent();
				ui.addChild(player);
				vGroup.addElement(ui);
				var btn:VideoAreaButton = new VideoAreaButton();
				btn.percentWidth = 100;
				btn.percentHeight = 100;
				vGroup.addElement(btn);
				
				var rtmfpvd:RtmpfpVideoDisplay = new RtmpfpVideoDisplay();
				rtmfpvd.percentWidth = 100;
				rtmfpvd.percentHeight = 100;
				vGroup.addElement(rtmfpvd);
			}
			
			internal function play():void{
				player.serverUrl = "rtmfp://10.0.12.192:1935";
				player.connect2Peer = peerid.text;
				player.streamName = "media";
				player.connectServer();
				Logger.callback(debugPrint);
				Alert.show("today is friday");
			}
			
			
			
			function debugPrint(event:DebugEvent){
				debugTxt.text += event.info+ "\n";
			}
			
		]]>
	</fx:Script>
		<s:Group id="vGroup" width="600" height="600">
			<s:Image source="{LocatePoint}"/>
		</s:Group>
	<s:TextArea id="debugTxt" x="0" bottom="0" width="100%" height="150" editable="false"/>
	<s:TextInput id="peerid" x="10" y="4" width="502" height="22"/>
	<s:Button x="536" y="4" label="连接" click="play()"/>
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
</s:Application>
